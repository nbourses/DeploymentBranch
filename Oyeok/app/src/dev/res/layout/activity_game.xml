<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nbourses.oyeok.activities.Game">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fragment
        android:id="@+id/g_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.nbourses.oyeok.RPOT.PriceDiscovery.GoogleMaps.CustomMapFragment"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"/>
    <View
        android:id="@+id/br_helperView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/locked"
        android:id="@+id/lock"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="20dp"
       android:id="@+id/clocktick1"
        android:text="3"
        android:visibility="gone"
        android:textColor="@color/red"
        android:textSize="40dip"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectable_border_effect"
        android:orientation="horizontal"
        android:id="@+id/searchbar"
        android:visibility="gone"
        android:layout_marginTop="4dp">

    <ImageView
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="24dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="12dp"
        android:id="@+id/linearLayout3"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_qrcode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="1"
        android:id="@+id/linearLayout4"
        android:nestedScrollingEnabled="false" >




        <AutoCompleteTextView
            android:id="@+id/inputSearch"
            android:inputType="textMultiLine|textPostalAddress"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:hint="Set your Region..."
            android:background="@color/greenish_blue"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:drawableRight="@drawable/ic_search_24dp"
            android:singleLine="false"
            android:minLines="2"
            android:lines="2"
            android:scrollbars="none"
            android:textAlignment="center"
            android:textSize="15dp"
            android:nestedScrollingEnabled="false"
            android:foregroundGravity="center" />
    </LinearLayout>


        <ImageView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_margin="@dimen/eight_dp"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_button1"
                android:src="@drawable/ic_gps_fixed_24dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/tw__transparent"
        android:id="@+id/pin"
        android:visibility="gone"
        android:foregroundGravity="center_horizontal"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/pin"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="-30dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:gravity="right"
        android:layout_marginRight="10dip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textColor="@color/black"
            android:id="@+id/week"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textColor="@color/black"
            android:text=": Week"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:id="@+id/month"
            android:textColor="@color/black"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textColor="@color/black"
            android:text=": Months"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textColor="@color/black"
            android:id="@+id/year"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dip"
            android:textColor="@color/black"
            android:text=": Years"/>
    </LinearLayout>
</FrameLayout>

</LinearLayout>
