<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbourses.oyeok.fragments.AddListing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/greenish_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="back"
                android:layout_weight="20"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Deposit as EMI "
                android:layout_weight="60"
                android:textStyle="bold|italic"
                android:textSize="20dip"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:id="@+id/CardTitle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:layout_weight="20"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/Cancel_add_building"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Already Shortlisted \n Property"
            android:gravity="center_vertical|right"
            android:layout_gravity="end"
            android:textSize="16sp"
            android:layout_weight="4"
            android:textStyle="bold|italic"
            android:textColor="@color/greenish_blue"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"

            android:gravity="center">
            <com.kyleduo.switchbutton.SwitchButton
                android:id="@+id/toggleBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:kswThumbColor="@color/greenish_blue"
                app:kswTintColor="@color/black" />


        </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Use OYEOK \n Platform"
                android:gravity="center_vertical"
                android:textStyle="bold|italic"
                android:textSize="16sp"
                android:layout_weight="4"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.6"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"

                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="50,000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/min1"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dip"
                    android:id="@+id/max1"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="30,00,000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">


                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"

                    app:dsb_indicatorPopupEnabled="false"
                    app:dsb_max="100000000"
                    app:dsb_min="40000"
                    app:dsb_progressColor="@color/greenish_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"

                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="Max"/>
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEPOSIT:"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:paddingRight="10dp"
                android:gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:text="58,000"
                    android:id="@+id/budget1"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="/month"
                    android:id="@+id/tv_rate1"
                    android:layout_alignBottom="@+id/budget1"
                    android:layout_toRightOf="@+id/budget1"
                    android:layout_toEndOf="@+id/budget1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dip"
                    android:text="@string/Rs"
                    android:id="@+id/textView15"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_alignTop="@+id/budget1"
                    android:layout_toLeftOf="@+id/budget1"
                    android:layout_toStartOf="@+id/budget1" />

            </RelativeLayout>

        </FrameLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.6"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"

                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="20,000"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:layout_marginLeft="1dp"
                    android:id="@+id/min"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_marginLeft="50dip"
                    android:id="@+id/max"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="2.5,00,000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">


                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"

                    app:dsb_indicatorPopupEnabled="false"
                    app:dsb_max="100000000"
                    app:dsb_min="40000"
                    app:dsb_progressColor="@color/greenish_blue"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="horizontal"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"

                    android:layout_weight="1"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"
                    android:text="Max"/>
            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RENT:"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:layout_gravity="center_vertical"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:paddingRight="10dp"

                android:gravity="right">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    android:text="24,000"
                    android:id="@+id/budget2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="/month"
                    android:id="@+id/tv_rate2"
                    android:layout_alignBottom="@+id/budget2"
                    android:layout_toRightOf="@+id/budget2"
                    android:layout_toEndOf="@+id/budget2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="18dip"
                    android:text="@string/Rs"
                    android:id="@+id/textView16"
                    android:layout_marginRight="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="4dp"
                    android:layout_alignTop="@+id/budget2"
                    android:layout_toLeftOf="@+id/budget2"
                    android:layout_toStartOf="@+id/budget2" />

            </RelativeLayout>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />





        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.4">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:weightSum="10">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:text="PAYMENT \n MONTHS"
                    android:gravity="center"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent"
                    android:layout_weight="7">



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:text=""/>
                        <RadioButton
                            android:text="3 mon"
                            android:layout_height="0dp"
                            android:layout_weight="7"
                            android:layout_width="match_parent"
                            android:id="@+id/radioButton" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="4.5">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:textAlignment="center"
                            android:text="comming soon"
                            android:gravity="bottom"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_height="0dp"
                            android:layout_weight="7">
                            <RadioButton
                                android:text="6 mon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/radioButton2"
                                android:clickable="false"
                                android:layout_weight="1" />

                            <RadioButton
                                android:text="9mon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/radioButton3"
                                android:clickable="false"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>
                        <!--<TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:text="comming soon"/>-->

                  <!--  <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="8"><RadioButton
                        android:text="3 mon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/radioButton"
                        android:layout_weight="1" />

                        <RadioButton
                            android:text="6 mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton2"
                            android:clickable="false"
                            android:layout_weight="1" />

                        <RadioButton
                            android:text="9mon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton3"
                            android:clickable="false"
                            android:layout_weight="1" /></LinearLayout>-->


                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2.2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:gravity="left|center_vertical"
                    android:text="Make on time re-payments of EMI = 33,334 Rs /month from date of registration &amp; get 50% cashback of Brokerage i.e. Rs 12,000 end of 3 months "/>

            </LinearLayout>








        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/greenish_blue"
            android:layout_margin="2dp"
            android:id="@+id/submitb"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:id="@+id/conf"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="5dp"
                android:text="Apply Now "/>



        </LinearLayout>


    </LinearLayout>

</FrameLayout>
