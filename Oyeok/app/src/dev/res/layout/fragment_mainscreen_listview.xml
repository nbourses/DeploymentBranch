<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:layout_marginTop="35dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.nbourses.oyeok.fragments.MainScreenPropertyListing">


        <EditText android:id="@+id/Searchlist"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:hint="Search Your Watchlist"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/greenishblue_border_grey_solid"
            android:layout_margin="4dip"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_below="@+id/container_toolbar"
            android:inputType="textVisiblePassword"/>


        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_build">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/grey" />
        </LinearLayout>-->


        <ListView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/listview"
            android:background="@android:color/background_light"
            android:divider="@color/grey"
            android:layout_marginTop="4dp"
            android:dividerHeight="4px"
            android:stateListAnimator="@anim/zoomout"
            />
</LinearLayout>
