<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dragablelistview"
    android:orientation="vertical"
    tools:context="com.nbourses.oyeok.fragments.MainScreenPropertyListing">

<ImageView
    android:layout_width="55dp"
    android:layout_height="45dp"
    android:id="@+id/pullup_button"
    android:src="@drawable/pullup_button"
    android:clickable="true"
    android:layout_marginBottom="-10dp"
    android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
        <EditText android:id="@+id/Searchlist"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:hint="Search Your Building"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/greenishblue_border_grey_solid"
            android:layout_margin="4dip"
            android:textSize="13sp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_below="@+id/container_toolbar"
            android:inputType="textVisiblePassword"/>


        <!--<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_build">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dip"
                android:background="@color/grey" />
        </LinearLayout>-->


        <ListView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/listview"
            android:background="@color/white"
            android:divider="@color/grey"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="20dip"
            android:dividerHeight="4px"
            />
        </LinearLayout>
</LinearLayout>
