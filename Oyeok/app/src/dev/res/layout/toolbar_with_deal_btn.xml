    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/greenish_blue"
        android:background="@color/transparent"
        android:gravity="left"
        android:layout_gravity="left"
        android:visibility="gone"
        android:id="@+id/back_btn"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/greenish_blue"
        android:background="@color/transparent"
        android:gravity="right"
        android:layout_gravity="right"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:id="@+id/btncancel"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="@color/greenish_blue"
        android:background="@color/transparent"
        android:gravity="left"
        android:layout_gravity="left"
        android:visibility="gone"
        android:id="@+id/cancel_btn"
        android:textSize="20sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:gravity="center"
        android:text=""
        android:foregroundGravity="center"
        android:layout_marginLeft="30dp"
        android:id="@+id/confirm_screen_title"
        android:textStyle="bold"
        android:textSize="18dp"
        android:visibility="visible"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal"
        android:id="@+id/setbaseloc1"
        android:visibility="gone"
        android:layout_marginRight="100dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/editBaseLocation"
            android:layout_gravity="center|right"
            android:src="@drawable/edit_icon"
            android:gravity="left"
            android:layout_marginRight="1dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true" />
        <TextView
            android:id="@+id/tv_change_region1"
            android:layout_gravity="center|left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="SET LOCATION"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="2dp"
            android:paddingRight="1dp"
            android:textSize="15sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:id="@+id/dealsWrapper">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealsWrap"
            android:orientation="horizontal"
            >
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone" />
        <Button
            android:id="@+id/btnMyDeals"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="22sp"
            android:textStyle="normal"
            android:textColor="@color/greenish_blue"
            android:background="@drawable/asset_dealsbutton_v1" />
            <Button
                android:id="@+id/btnMyDeals1"
                android:layout_width="35dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:text=""
                android:visibility="gone"
                android:textColor="@color/greenish_blue"
                android:background="@drawable/snapshot"/>
        </LinearLayout>
        <TextView

            android:id="@+id/hdroomsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_badge"
            android:text="23"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:gravity="center"
            android:textColor="#FFF"
            android:textSize="11sp"

            android:layout_alignParentRight="true"
            android:visibility="gone" />
           <!-- android:layout_above="@+id/btnMyDeals" -->


    </RelativeLayout>

