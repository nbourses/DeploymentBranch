<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbourses.oyeok.fragments.PartnerBrokerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@color/greenish_blue">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="20"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/back"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Close More Every Month"
                android:layout_weight="60"
                android:textStyle="bold|italic"
                android:textSize="20dip"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:id="@+id/CardTitle"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:layout_weight="20"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/Cancel_add_building"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lifetime Free Trial"
                android:id="@+id/pb_title"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:background="@color/greenish_blue">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Choose Your Free vs Paid"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="2">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/gradient_button_bg_with_border"
                    android:layout_margin="10dp"
                    android:textColor="@color/greenish_blue"
                    android:text="Broker\n(Free)"
                    android:id="@+id/pb_free"/>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@drawable/gradient_button_bg_with_border"
                    android:textColor="@color/whitesmoke"
                    android:id="@+id/pb_partner"
                    android:text="Partner\nBroker"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/filter_border"
            android:layout_gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold|italic"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:id="@+id/pb_des"
                    android:text="*Plus Leads of other Brokers\n*Connect with App Users in your Locality\n*Match and Market your Listings with Brokers\n*Add new Buildings in Locality, get Site Visits"/>


  </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@color/greenish_blue"
            android:layout_margin="2dp"
            android:id="@+id/submitb"
            android:orientation="horizontal"
            >


            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"

                android:textStyle="bold|italic"
                android:paddingBottom="5dp"
                android:id="@+id/pb_continue"
                android:text="Continue Lifetime Free Trial "/>




        </LinearLayout>

</LinearLayout>

</FrameLayout>
