<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical">

  <!-- <include layout="@layout/default_chat" /> -->
    <include layout="@layout/ratingbar" />
    <RelativeLayout
        android:id="@+id/conversationRootView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">
        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />


        </LinearLayout>



        <ListView
            android:id="@+id/chat_list_view"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:layout_above="@+id/bottomlayout"
            android:layout_height="match_parent"
            android:stackFromBottom="true"
            android:layout_below="@+id/container_toolbar">

        </ListView>

        <LinearLayout
            android:id="@+id/bottomlayout"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/imgSuggestion"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/sugeestion_icon" />

                <EditText
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/edtTypeMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollHorizontally="false"
                    android:layout_toRightOf="@+id/imgSuggestion"
                    android:layout_toLeftOf="@+id/imgSendMsg"
                    android:hint="@string/type_your_message"
                    android:maxLines="4"
                    android:singleLine="false"
                    android:inputType="textCapSentences"
                    android:textSize="18sp"
                    android:paddingLeft="4dp"
                    android:layout_marginLeft="8dp"/>


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imgSendMsg"
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:paddingLeft="13dp"
                    android:paddingStart="13dp"
                    android:paddingRight="17dp"
                    android:paddingEnd="17dp"
                    android:src="@drawable/attachment" />

            </RelativeLayout>

        </LinearLayout>

        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/webView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:visibility="gone" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/suggestionRootView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:visibility="gone"
        android:orientation="vertical">

        <ListView
            android:id="@+id/suggestionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">
        </ListView>

    </LinearLayout>

</LinearLayout>
