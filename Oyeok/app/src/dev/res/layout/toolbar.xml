<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/actionBarSize"
    android:background="?attr/colorPrimaryDark"
    local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    local:popupTheme="@style/ThemeOverlay.AppCompat.Light"

    tools:showIn="@layout/activity_main">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="2dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/dealsWrapper">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myaccount"
        android:visibility="gone"
        android:background="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money : "
            android:layout_marginLeft="8dp"
            android:id="@+id/balance"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="34"
            android:id="@+id/balance1"
            android:layout_marginRight="8dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginLeft="6dp"
            android:layout_gravity="center_horizontal|center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="k"
            android:layout_marginRight="8dp"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal|center_vertical" />

    </LinearLayout>
        <TextView
            android:id="@+id/gm_cashback_btn"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7% CASHBACK"
            android:padding="5dp"
            android:textStyle="bold"
            android:textColor="@color/greenish_blue"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="4dp"
            android:visibility="gone"
            android:background="@drawable/game_cashback_bg"
            android:textSize="15sp" />
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:visibility="gone"
        android:background="@color/greenish_blue"
        android:id="@+id/DONE"
        android:text="Done"
        android:textColor="@color/white"
        android:layout_gravity="left|center_vertical"
        android:layout_marginRight="10dp"/>
    <Button
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:visibility="gone"

        android:background="@drawable/ic_menu_24dp"
        android:id="@+id/residemenu_rightmenu_titlebar"
        android:layout_gravity="right|center_vertical"
        />
