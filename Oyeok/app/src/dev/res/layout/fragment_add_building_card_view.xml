            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="coming soon"
                android:id="@+id/textView11"
                android:textColor="@color/black"

                android:layout_marginLeft="64dp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    android:textStyle="bold|italic"
                    android:id="@+id/btn_shop"
                    android:textColor="@color/greenish_blue"
                    android:background="@drawable/gradient_button_bg_with_border"
                    android:text="Shop"
                    />
                <TextView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:textSize="20dp"
                    android:paddingRight="18dp"
                    android:paddingLeft="14dp"
                    android:gravity="center_vertical"
                    android:textStyle="bold|italic"
                    android:paddingEnd="4dp"
                    android:id="@+id/btn_industrial"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/greenish_blue"
                    android:background="@drawable/gradient_button_bg_with_border"
                    android:text="Industrial"
                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.6"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:textColor="@color/black"
                    android:text="Step 2:  "/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Set your BHK type. "/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:id="@+id/linearLayout9">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:text="Set Configuration :"
                    android:textSize="20dip"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dip"
                    android:layout_marginLeft="5dp"
                    android:text="2 BHK"
                    android:textColor="@color/greenish_blue"
                    android:textSize="20dp"
                    android:id="@+id/selected_config"
                    android:textStyle="bold|italic"/>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:background="@color/white"
                android:layout_below="@+id/linearLayout9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:id="@+id/horizontalScrollView">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:orientation="horizontal">
                   <!-- <ListView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:divider="@color/white"
                        android:dividerHeight="4dp">

                    </ListView>-->
                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/radioGroup1"
                        android:gravity="center"
                        android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"

                        android:text="1 Rk"
                        android:layout_weight="1"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="true"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/rk1"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk1"
                        android:text="1 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:id="@+id/bhk1_5"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:text="1.5 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="true"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk2"
                        android:text="2 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk2_5"
                        android:text="2.5 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk3"
                        android:text="3 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk3_5"
                        android:text="3.5 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk4"
                        android:text="4 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
                        android:id="@+id/bhk4_5"
                        android:text="4.5 BHK"/>
                    <RadioButton
                        android:layout_width="80dip"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:button="@null"
                        android:padding="5dp"
                        android:checked="false"
                        android:background="@drawable/rbtn_selector"
                        android:textColor="@drawable/rbtn_txtcolor_selector"
