<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nbourses.oyeok.fragments.AddListing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"

        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:layout_weight=".25"
            android:background="@color/greenish_blue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type of Building"
                android:textStyle="bold"
                android:textSize="20dip"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:foregroundGravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:id="@+id/CardTitle"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel"
                android:textColor="@color/black"
                android:foregroundGravity="right"
                android:layout_marginLeft="20dp"
                android:gravity="right"
                android:id="@+id/Cancel_add_building"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/locked_building_icon"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.75"
            android:background="@color/greenish_blue"
            android:gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.15"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:textColor="@color/black"
        android:text="Step 1 : "/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:src="@drawable/check_mark_black" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.20"
                android:orientation="horizontal"
                android:gravity="center"
                android:id="@+id/linearLayout7">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:text="Choose Building Type :"
                android:textStyle="italic"
                android:layout_marginLeft="4dip"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="16dip"
                android:id="@+id/textView9"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dip"
                android:text="Home"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:textSize="18dip"
                android:layout_toRightOf="@+id/textView9"
                android:gravity="center"
                android:layout_toEndOf="@+id/textView9"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="12dp"
                android:id="@+id/b_type"
                android:layout_alignBottom="@+id/textView9"/>
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.13"
                android:text="coming soon"
                android:textColor="@color/black"
                android:id="@+id/textView13"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="94dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:gravity="center"
                android:id="@+id/linearLayout2"
                >
                <TextView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:textStyle="bold|italic"
                    android:id="@+id/btn_home"
                    android:paddingRight="5dp"
                    android:textColor="@color/greenish_blue"
                    android:background="@drawable/gradient_btn_bg_with_check"
                    android:text="Home"
                    />
                <TextView
                    android:layout_width="120dip"
                    android:layout_height="40dip"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:id="@+id/btn_office"
                    android:paddingRight="8dp"
                    android:textStyle="bold|italic"
                    android:layout_marginLeft="20dip"
                    android:textColor="@color/greenish_blue"
                    android:background="@drawable/gradient_button_bg_with_border"
                    android:text="Office"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
