<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/deal_highlight_bg"
    android:id="@+id/dealWrapper">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_centerVertical="true"
        android:id="@+id/wrapperFirstChat">

   <!--     <TextView
            android:id="@+id/txtFirstChar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/shape_circle"
            android:gravity="center"
            android:text="H"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp" /> -->

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/dealPtype"
            android:src="@drawable/home"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mumbai"
            android:id="@+id/locality"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:textColor="@color/greenish_blue"
            android:gravity="center_horizontal"
            android:textSize="12sp" />
        <!-- android:background="@drawable/shape_circle"-->

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Helpchat"
        android:textStyle="bold"
        android:textSize="12sp"
        android:id="@+id/txtTitle"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/wrapperFirstChat"
        android:layout_marginLeft="12dp"
        android:layout_alignTop="@+id/wrapperFirstChat"
        android:layout_marginBottom="2dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/txtDescription"
        android:layout_toRightOf="@+id/wrapperFirstChat"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="8dp"
        android:text="Hello"
        android:textColor="#000000"
        android:layout_below="@+id/txtTitle"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:id="@+id/txtTime"
            android:layout_marginRight="8dp"
            android:textColor="#000000"
            android:text="Last month"
            android:textAlignment="viewEnd" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/linearLayout3"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="8dp"
        android:background="@color/yellow"
        android:layout_alignBottom="@+id/linearLayout3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Verified"
        android:id="@+id/listing"
        android:paddingLeft="10dp"
        android:paddingRight="9dp"
        android:textColor="@color/White"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:paddingTop="2dp"
        android:paddingBottom="1dp" />
</LinearLayout>

    <TextView

        android:id="@+id/hdroomsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_badge"
        android:text="23"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="11sp"
        android:visibility="gone"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:layout_marginRight="8dp" />

</RelativeLayout>
