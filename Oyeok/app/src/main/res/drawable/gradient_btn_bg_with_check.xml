<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="#000000" android:startColor="#000000" android:type="linear" />

            <stroke android:width="1dp" android:color="#504a4b" />

            <corners android:radius="10dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="2dp" android:top="3dp" />
        </shape></item>
        <item ><bitmap android:gravity="right|center_vertical" android:src="@drawable/checkmark"  >

            // you can use any other image here, instead of default_holo_dark_am
        </bitmap>

        </item>
    </layer-list></item>


</selector>



