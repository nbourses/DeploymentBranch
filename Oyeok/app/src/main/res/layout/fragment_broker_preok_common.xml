<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.nbourses.oyeok.RPOT.OkBroker.UI.Ok_Broker">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:id="@+id/notClicked"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.nbourses.oyeok.RPOT.OkBroker.CircularSeekBar.CircularSeekBarNew
        android:id="@+id/circularSeekbar"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        app:circlenew_color="#81C784"
        android:layout_marginBottom="60dp"
        app:circlenew_stroke_width="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">



        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/greenish_blue"
            android:layout_marginLeft="5dp"
            android:text="Ok"
            android:layout_height="wrap_content"
            android:id="@+id/okButton"
            android:textColor="@color/white" />








        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:id="@+id/dealsWrapper">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/deal"
            android:textColor="@color/white"
            android:text="Deal"
            android:background="@color/yellow"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView

            android:id="@+id/hdroomsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:background="@android:drawable/ic_notification_overlay"
            android:text="23"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentRight="true"  />
        <!-- android:layout_above="@+id/btnMyDeals" -->


    </RelativeLayout>







    </LinearLayout>






    <TextView
        android:id="@+id/displayOkText"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:textSize="13dp"
        android:text="5 oks will be used"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/texPtype"
            android:visibility="gone"
            android:gravity="center"
            android:textSize="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Property Type: Shop"/>

        <TextView
        android:id="@+id/texPstype"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="Property Subtype: Food Outlet"/>

    <TextView
        android:id="@+id/rentText"
        android:visibility="gone"
        android:gravity="center"
        android:textSize="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:text="50L Rs"/>
