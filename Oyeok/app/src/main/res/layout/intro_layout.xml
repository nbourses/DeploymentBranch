<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    >

<FrameLayout
    android:id="@+id/wrapper"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:visibility="visible"
    tools:background="@color/transparent">

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
    android:layout_weight="0.8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:id="@+id/tab_layout"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>

    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/transparent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img1"
                android:layout_margin="2dp"
                android:src="@drawable/selected_dot1"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img2"
                android:layout_margin="2dp"
                android:src="@drawable/selected_dot"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img3"
                android:layout_margin="2dp"
                android:src="@drawable/selected_dot"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img4"
                android:layout_margin="2dp"
                android:src="@drawable/selected_dot"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img5"
                android:layout_margin="2dp"
                android:background="@drawable/selected_dot"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <Button
                android:text="I am a Customer"
                android:textAllCaps="false"
                android:id="@+id/btnC"
                android:layout_weight="0.5"
                android:background="@drawable/intro_button"
                android:layout_width="0dp"
                android:textColor="@color/dark_white"
                android:layout_height="35dp"
                android:elevation="0dp"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_marginRight="5dp" />
            <Button
                android:text="I am a Broker"
                android:textAllCaps="false"
                android:id="@+id/btnB"
                android:layout_weight="0.5"
                android:background="@drawable/intro_button"
                android:textColor="@color/dark_white"
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_height="35dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <Button
            android:text="or just PLAY GAME >>"
            android:background="@drawable/intro_button"
            android:textAllCaps="false"
            android:layout_height="35dp"
            android:textSize="12sp"
            android:textColor="@color/dark_white"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/playgame" />



    </LinearLayout>

</FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/container_Signup1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Skip this >>"
            android:textAllCaps="false"
            android:textColor="@color/dark_white"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/transparent"
            android:textSize="12sp"
            android:id="@+id/skip"

            android:layout_gravity="right" />
    </FrameLayout>
</RelativeLayout>

