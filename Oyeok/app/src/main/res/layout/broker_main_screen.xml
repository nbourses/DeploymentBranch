<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.nbourses.oyeok.RPOT.OkBroker.UI.SlidingTabLayout.SlidingTabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.nbourses.oyeok.RPOT.OkBroker.UI.SlidingTabLayout.SlidingTabLayout>




        <android.support.v4.view.ViewPager
        android:layout_below="@+id/tabs"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonslayout"
        >

    </android.support.v4.view.ViewPager>

    <!--<LinearLayout-->
        <!--android:id="@+id/showMap"-->
        <!--android:orientation="horizontal"-->
        <!--android:background="@drawable/dashed_line"-->
        <!--android:layout_above="@+id/seekbar_linearlayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content" >-->

        <!--<ImageView-->
            <!--android:src="@drawable/ic_up_24dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"/>-->

        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/buttonslayout"
            android:layout_above="@+id/seekbar_linearlayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <Button
                android:id="@+id/earnOk"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Earn Ok"
                android:background="#69F0AE"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Droom"
                android:background="#FFB74D"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seekbar_linearlayout"
            android:paddingLeft="@dimen/sixteen_dp"
            android:paddingRight="@dimen/sixteen_dp"
            android:background="@color/dark_white"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="bottom"
            android:baselineAligned="false"
            android:foregroundGravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-8dp"
            android:paddingTop="8dp">

            <com.nbourses.oyeok.RPOT.PriceDiscovery.UI.PhasedSeekBarCustom.CustomPhasedSeekBar
                android:id="@+id/phasedSeekBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>





    </RelativeLayout>

    <FrameLayout
        android:id="@+id/mapView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >
        <fragment
            android:id="@+id/map"
            android:layout_below="@+id/seekbar_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.nbourses.oyeok.RPOT.PriceDiscovery.GoogleMaps.CustomMapFragment"
            android:orientation="vertical"
            >
        </fragment>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/location_pin"
            android:layout_gravity="center"
            android:background="@null"
            android:id="@+id/locationpin" />
        <ImageButton
            android:id="@+id/bPinLocation"
            android:layout_height="60dp"
            android:layout_width="60dp"
            android:padding="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:background="#40000000"
            android:src="@drawable/ic_gps_fixed_24dp"
            android:layout_gravity="bottom|right"/>
    </FrameLayout>









</FrameLayout>