<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.nbourses.oyeok.fragments.AppSetting"
    android:background="@color/White">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SETTING"
        android:id="@+id/setting"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/greenish_blue" />

    <LinearLayout
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_margin="10dp">

        <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_beacon"
            android:layout_marginRight="10dp"
        android:text="BEACONS"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BEACONS"
            android:textColor="@color/Black"
            android:layout_margin="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/grey"
        android:layout_margin="10dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check_walkthrough"
            android:layout_marginRight="10dp"
            android:text="WALKTHROUGH"
            android:layout_gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WALK-THROUGH"
            android:textColor="@color/Black"
            android:layout_margin="10dp" />
    </LinearLayout>

</LinearLayout>
