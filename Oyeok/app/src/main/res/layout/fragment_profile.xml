<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.nbourses.oyeok.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="horizontal"
        android:background="#011627"
        android:id="@+id/imageViewLayout">
        <ImageView
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:id="@+id/profile_image"
            android:layout_gravity="left|top"
            android:src="@drawable/ic_profile"
            android:layout_marginLeft="10dp"
            android:padding="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:text="USERNAME"
            android:textCursorDrawable="@null"
            android:singleLine="true"
            android:id="@+id/txt_user"
            android:textColor="#ffffff"
            android:hint="Enter Name"
            android:textColorHint="#bebcbc"
            android:cursorVisible="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right|center_vertical"
        android:layout_below="@+id/imageViewLayout"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_below="@+id/imageViewLayout"
                android:text="Role:"
                android:textSize="20sp"
                android:padding="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_role"
                android:textSize="20sp"
                android:layout_gravity="left|center_vertical"
                android:layout_below="@+id/imageViewLayout"
                android:text="Role Here"
                android:padding="20dp"
                />
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp"
            android:id="@+id/txt_email"
            android:background="@null"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/text_role"
            android:text="Email Here"
            android:hint="Enter new Email-id"
            android:padding="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_phone"
            android:textSize="20sp"
            android:layout_below="@+id/text_email"
            android:layout_gravity="left|center_vertical"
            android:text="Phone Here"
            android:padding="20dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/update_profile"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/sixteen_dp"
        android:layout_marginRight="@dimen/sixteen_dp"
        android:layout_marginLeft="@dimen/sixteen_dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_greenishblue"
        android:gravity="center"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sixteen_sp"
        android:layout_gravity="right|bottom" />

</FrameLayout>
