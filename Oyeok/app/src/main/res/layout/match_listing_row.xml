<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/matchlisting"

    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginBottom="2.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:backgroundTint="#B2DFDB"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2">
                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_checked_grey"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:id="@+id/match_icon"
                    android:layout_margin="5dip"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home"

                    />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date"
                android:text="30/1/2017"
                android:layout_gravity="center"
                android:textColor="@color/gray"
                android:layout_marginLeft="3dp"
                android:textSize="13dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/broker_name"
                android:text="Ritesh Warke"
                android:textStyle="italic|bold"
                android:textSize="14dp"
                android:textColor="@color/greenish_blue"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/config"
                android:text="REQ. (2BHK) SF@ Rs 1.23 lacs"
                android:textStyle="italic|bold"
                android:textSize="14dp"
                android:textColor="@color/orange"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:orientation="horizontal"
                android:gravity="left">

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:text="Mangal Sadan"
                    android:layout_weight="3.5"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:id="@+id/building_name"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:text="2%"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:textStyle="bold"
                        android:id="@+id/match_growth_rate"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:id="@+id/match_growth_image"
                        android:layout_weight="0.5"
                        android:src="@drawable/sort_up_green"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:text="Andheri west"
                    android:layout_weight="1.2"
                    android:gravity="left|top"
                    android:textSize="12sp"
                    android:id="@+id/match_locality"
                    android:textColor="@color/black"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1.7"
                    android:layout_marginRight="5dp"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Rs. 20000"
                        android:gravity="left|top"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/match_price"
                        android:layout_gravity="left"
                        android:textColor="@color/greenish_blue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Above \nmarket rate"
                        android:gravity="center|top"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        android:id="@+id/m_rate_indicator"
                        android:textColor="@color/greenish_blue"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>